<h2>Eventos</h2>

<button class="btn btn-primary" id="btnListar">Listar Eventos</button>
<button class="btn btn-success" id="btnCrear">Crear Evento</button>

<table class="table" id="tablaEventos">
    <thead>
        <tr>
            <td>Obra</td>
            <td>Fecha</td>
            <td>Orquesta</td>
            <td>Localidad</td>
            <td></td>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- MODAL CREACION-->
<div id="modalCrear" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content" id="contenedor">
            <div class="modal-header">
                <input type="hidden" id="eventoId" />
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Crear Evento</h4>
            </div>
            <div class="modal-body" >
                <form id="modalForm">
                    <div class="form-group">
                        <label for="obra">Obra</label>
                        <input name="obra"
                            type="text"
                            class="form-control validate"
                            id="obra"
                            placeholder="Ingrese el nombre de la obra"
                            minlength="2"
                            maxlength="200" 
                            required                                                       
                            />
                    </div>

                    <div class="form-group">
                        <label for="fecha">Fecha</label>
                        <input type="date" name="fecha" class="form-control validate" id="fecha" required/>
                    </div>

                    <div class="dropdown form-group" id="orquestas">
                        <label for="orquesta">Orquesta</label>
                        <select class="custom-select form-control validate" name="selectOrquesta" id="selectOrquesta" required>
                            <option selected>Seleccione una Orquesta</option>
                        </select>
                    </div>

                    <div class="form-group" id="divLocalidad">
                        <label for="localidad">Localidad</label>
                        <input id="localidad"
                            type="text"
                            class="form-control"                            
                            placeholder="Localidad" 
                            disabled/>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            Close
                        </button>
                        <button type="button" class="btn btn-primary" id="btnGuardar">
                            Save changes
                        </button>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</div>
<!--MODAL DE ELIMINACION DE EVENTOS-->
<div id="modalDelete" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">¿Desea eliminar el evento definitivamente?</h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Cancelar
                </button>
                <button type="button" class="btn btn-danger" id="btnBorrar">
                    Borrar
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
@section scripts { 
    @Scripts.Render("~/bundles/listado-evento")
    @Scripts.Render("~/bundles/validation-evento") 
    }

