@model List<teatro.Models.IntegranteDto>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Edad</th>
            <th>Telefono</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.Edad</td>
            @if (item.Telefono is null)
            {
                <td>No tiene</td>
            }
            else
            {
                <td>@item.Telefono</td>
            }
            <td>
                @Html.ActionLink("Editar", "IntegranteEdit", new { id = item.Id })                
                @Html.ActionLink("Eliminar", "IntegranteDelete", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
